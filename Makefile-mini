NAME = miniRT

LIBFT_DIR = libft
LIBFT = $(LIBFT_DIR)/libft.a

SRC_DIR = srcs/
INC_DIR = includes/
GLFW_DIR = /Users/apimikov/.brew/opt/glfw/lib

SRC_NAMES = main.c \
	    rt/viewport.c \
	    rt/transform_scene.c \
	    lin_alg/vec3.c \
	    lin_alg/vec_utils.c \
	    lin_alg/rotation_xyz.c

CFLAGS	= -Wextra -Wall -Werror -Wunreachable-code -Ofast

HEADERS	= -I./includes -I$(LIBMLX)/include  -I./$(LIBFT_DIR)

LIBMLX	= ./lib/MLX42
LIBS	= $(LIBMLX)/build/libmlx42.a -ldl -lglfw -L$(GLFW_DIR) -pthread -lm
#LIBS	= $(LIBMLX)/build/libmlx42.a -ldl -lglfw -pthread -lm
MLX	= $(LIBMLX)/build/libmlx42.a

SRCS = $(addprefix $(SRC_DIR), $(SRC_NAMES))
OBJS	= ${SRCS:.c=.o}

all: $(NAME)

$(NAME): $(SRCS) $(OBJS) $(LIBFT) $(MLX) .name
	cc $(FLAGS) $(OBJS) $(LIBS) $(HEADERS)  $(LIBFT) -o $(NAME)

%.o: %.c
	cc $(FLAGS) -c $^ -o $@ $(HEADERS)

$(MLX):
	cmake $(LIBMLX) -B $(LIBMLX)/build && make -C $(LIBMLX)/build -j4

$(LIBFT):
	$(MAKE) -C $(LIBFT_DIR)

.name:
	touch .name

clean:
	@rm -rf $(OBJS)
	@rm -rf $(LIBMLX)/build
	$(MAKE) -C $(LIBFT_DIR) fclean
	rm -f .name

fclean: clean
	@rm -rf $(NAME)

re: clean all

.PHONY: all, clean, fclean, re, libmlx
